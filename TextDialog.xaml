<Window x:Class="SaveGameManager.TextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveGameManager"
        mc:Ignorable="d"
        Title="Enter the Profilename" Height="90" Width="224" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
  <Grid>
    <TextBox x:Name="txtResponse" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="206" />
    <Button x:Name="btnOk" Content="Ok" Width="103" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,25,0,0" Click="btnOk_Click" />
    <Button x:Name="btnCancel" Content="Cancel" Margin="103,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="103" Click="btnCancel_Click" />
  </Grid>
</Window>
